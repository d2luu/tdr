<h1><%= t "reviews.edit_title" %></h1>
<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= render "shared/error_messages", object: @review %>
    <%= form_for @review do |f| %>
      <div class="form-review">
        <div class="row">

          <div id="rating-form">
            <label>Rating: </label>
          </div>
          
          <%= f.text_area :content, rows: 4, placeholder: t(:addreview), class: "form-control form-margin" %>
          <%= f.submit t(:submitreview), class: "btn btn-primary" %>
        </div>
      </div>
    <% end %>
    <%= link_to t("reviews.edit.cancle"), location_path(@review.location) %>
   </div>
</div>
